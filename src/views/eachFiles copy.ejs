    // Add event listener to sync checkboxes between forms
    document.addEventListener('change', function(e) {
      if (e.target.classList.contains('bulk-checkbox')) {
        const isChecked = e.target.checked;
        const checkboxValue = e.target.value;
        
        // Find corresponding checkbox in the other form and sync it
        const allCheckboxes = document.querySelectorAll(`input[value="${checkboxValue}"]`);
        allCheckboxes.forEach(cb => {
          if (cb !== e.target) {
            cb.checked = isChecked;
          }
        });
      }
    });

    function closeAccessModal() {
      accessModal.style.display = 'none';
      toggleUserListVisible = false;
    }

    accessModalClose.addEventListener('click', closeAccessModal);
    accessModalCancel.addEventListener('click', closeAccessModal);

    window.addEventListener('click', (e) => {
      if (e.target === accessModal) {
        closeAccessModal();
      }
    });
</script>


