<%- include("./Layouts/header", { user: user }) %>

<div class="page-content">
  <div class="container-fluid">

    <!-- Toast Messages -->
    <div aria-live="polite" aria-atomic="true" class="position-relative">
      <div class="toast-container position-absolute top-0 end-0 p-3" style="z-index: 1055;">
        <% if (messages.success) { %>
        <div class="toast text-white bg-success show" role="alert">
          <div class="d-flex">
            <div class="toast-body"><%= messages.success %></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
          </div>
        </div>
        <% } %>
        <% if (messages.error) { %>
        <div class="toast text-white bg-danger show" role="alert">
          <div class="d-flex">
            <div class="toast-body"><%= messages.error %></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Page Title -->
    <div class="row">
      <div class="col-12">
        <div class="page-title-box">
          <h4 class="mb-0 fw-semibold">Shared Files and Folders</h4>
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="#">DMS</a></li>
            <li class="breadcrumb-item active">Shared Items List</li>
          </ol>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="row">
      <div class="col-xl-12">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-wrap justify-content-between gap-3">
              <div class="search-bar">
                <span><i class="bx bx-search-alt"></i></span>
                <input type="search" class="form-control" id="search" placeholder="Search files & folders...">
              </div>
            </div>

            <div class="table-responsive">
              <div id="searchResults" class="mt-4"></div>
              <table class="table align-middle mb-0 table-hover table-centered" id="sharedItemsTable">
                <thead class="bg-light-subtle">
                  <tr>
                    <th>SI No.</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Shared By</th>
                    <th>Shared To</th>
                    <th>Access</th>
                    <th>Shared Date</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% sharedItems.forEach((file, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td>
                      <% if (file.type === 'folder') { %>
                      <i class="bi bi-folder-fill text-warning"></i>
                      <iconify-icon icon="solar:folder-with-files-outline"></iconify-icon>
                      <% } else { %>
                      <i class="bi bi-file-earmark-text text-primary"></i>
                      <iconify-icon icon="<%= getFileIcon(file.name) %>"></iconify-icon>
                      <% } %>
                      <%= file.name %>
                    </td>
                    <td>
                      <%= file.type.charAt(0).toUpperCase() + file.type.slice(1) %>
                    </td>
                    <td><%= file.sharedBy %></td>
                    
                    <!-- Shared To (showing first 3 with +count) -->
                    <td>
                      <div class="shared-to-container">
                        <% file.sharedWith.slice(0, 3).forEach((sw, swIndex) => { %>
                          <span class="badge bg-primary-subtle text-primary me-1 mb-1">
                            <%= sw.to.includes('(Group)') ? sw.to.replace(' (Group)', '') + ' (Group)' : sw.to %>
                          </span>
                        <% }) %>
                        <% if (file.sharedWith.length > 3) { %>
                          <span class="badge bg-secondary-subtle text-secondary me-1 mb-1" 
                                title="<%= file.sharedWith.slice(3).map(sw => sw.to).join(', ') %>">
                            +<%= file.sharedWith.length - 3 %>
                          </span>
                        <% } %>
                      </div>
                    </td>
                    
                    <!-- Access Level Display (showing combined access levels) -->
                    <td>
                      <% 
                        const accessLevels = [...new Set(file.sharedWith.map(sw => sw.access))];
                        const accessLabels = accessLevels.map(access => {
                          if (access === 'write') return 'Read';
                          else if (access === 'NoDownload') return 'View Only';
                          else return access;
                        });
                      %>
                      <% accessLabels.forEach((label, idx) => { %>
                        <span class="badge bg-info-subtle text-info me-1">
                          <%= label %>
                        </span>
                      <% }) %>
                    </td>

                    <!-- Shared At (showing latest shared date) -->
                    <td>
                      <% 
                        const latestShare = file.sharedWith.reduce((latest, current) => 
                          new Date(current.sharedAt) > new Date(latest.sharedAt) ? current : latest
                        );
                      %>
                      <%= new Date(latestShare.sharedAt).toLocaleString() %>
                    </td>

                    <!-- Action Buttons -->
                    <td>
                      <% if (file.type === "folder") { %>
                      <a href="/folder/<%= file._id %>">
                        <iconify-icon icon="fluent:open-32-filled" class="align-middle fs-18"></iconify-icon>
                      </a>
                      <% } else if (file.type === "file") { %>
                      <div class="d-flex gap-2">
                        <!-- Preview button always visible -->
                        <a href="javascript:void(0);" class="btn btn-soft-secondary btn-sm" onclick="previewPdf('/shared-files/<%= file._id %>', '<%= file.mimetype %>')" title="Preview">
                          <iconify-icon icon="solar:eye-broken" class="align-middle fs-18"></iconify-icon>
                        </a>

                        <!-- Download button - check if any share allows download -->
                        <% 
                          const hasDownloadAccess = file.sharedWith.some(sw => sw.access !== 'NoDownload');
                        %>
                        <% if (hasDownloadAccess) { %>
                        <a href="/view/<%= file._id %>" class="btn btn-soft-success btn-sm" title="Download">
                          <iconify-icon icon="solar:download-minimalistic-line-duotone" class="align-middle fs-18"></iconify-icon>
                        </a>
                        <% } else { %>
                        <button class="btn btn-soft-secondary btn-sm" disabled title="Download not allowed">
                          <iconify-icon icon="solar:download-minimalistic-line-duotone" class="align-middle fs-18"></iconify-icon>
                        </button>
                        <% } %>
                      </div>
                      <% } %>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            
            <div class="card-footer border-top">
              <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end mb-0">
                  <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                  <li class="page-item active"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- PDF View Model  -->
  <!-- PDF Preview Modal -->
  <div class="modal fade" id="pdfPreviewModal" tabindex="-1" aria-labelledby="pdfPreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" style="max-width: 90vw;">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">PDF Preview</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center">
          <canvas id="pdf-render" style="width: 100%; border: 1px solid #ccc;"></canvas>
        </div>
      </div>
    </div>
  </div>

  <!-- search functionality  -->
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const searchInput = document.getElementById("search");
      const rows = document.querySelectorAll("tbody tr");
      const noResultsRow = document.getElementById("noResultsRow");

      function filterRows() {
        const query = searchInput.value.trim().toLowerCase();
        let anyVisible = false;

        rows.forEach(row => {
          const text = row.innerText.toLowerCase();
          if (text.includes(query)) {
            row.style.display = "";
            anyVisible = true;
          } else {
            row.style.display = "none";
          }
        });

        // Show/hide "No Results" row
        if (noResultsRow) {
          if (!anyVisible) {
            noResultsRow.style.display = "table-row";
          } else {
            noResultsRow.style.display = "none";
          }
        }
      }

      searchInput.addEventListener("input", filterRows);
      filterRows(); // Initial call to set correct state
    });
  </script>
  
  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- PDF.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.min.js"></script>

  <script>
    async function previewPdf(fileUrl, fileType) {
      const canvas = document.getElementById("pdf-render");
      const modal = new bootstrap.Modal(document.getElementById("pdfPreviewModal"));

      modal.show();

      try {
        const pdfjsLib = window["pdfjs-dist/build/pdf"];
        pdfjsLib.GlobalWorkerOptions.workerSrc = "https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.worker.min.js";

        const loadingTask = pdfjsLib.getDocument(fileUrl);
        const pdf = await loadingTask.promise;
        const page = await pdf.getPage(1);

        const scale = 1.5;
        const viewport = page.getViewport({
          scale
        });

        const context = canvas.getContext("2d");
        canvas.height = viewport.height;
        canvas.width = viewport.width;

        const renderContext = {
          canvasContext: context,
          viewport: viewport
        };

        await page.render(renderContext).promise;
      } catch (error) {
        console.error("Failed to preview PDF:", error);
        modal.hide();
        alert("Failed to load PDF preview.");
      }
    }
  </script>
  
  <script>
    document.addEventListener('keydown', function(e) {
      // Block Ctrl + P (Print), Ctrl + S (Save), Ctrl + U (View Source), Ctrl + C (Copy), etc.
      if (e.ctrlKey && ['p', 's', 'u', 'c', 'a'].includes(e.key.toLowerCase())) {
        e.preventDefault();
        alert("This shortcut is disabled.");
      }

      // Block F12 (Dev tools)
      if (e.key === "F12") {
        e.preventDefault();
        alert("F12 is disabled.");
      }
    });

    // Optional: block right-click context menu
    document.addEventListener('contextmenu', function(e) {
      e.preventDefault();
    });
  </script>

  <%- include("./Layouts/footer") %>