<body class="h-100 bg-auth">
  <h1 class="text-center fw-bold mt-4" style="letter-spacing: 10px;">Document Management System</h1>
  <!-- Toast Container -->
  <div aria-live="polite" aria-atomic="true" class="position-relative">
    <div class="toast-container position-absolute top-0 end-0 p-3" style="z-index: 1055;">
      <% if (messages.success) { %>
      <div class="toast align-items-center text-white bg-success border-0 show" role="alert">
        <div class="d-flex">
          <div class="toast-body">
            <%= messages.success %>
          </div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
      </div>
      <% } %>

      <% if (messages.error) { %>
      <div class="toast align-items-center text-white bg-danger border-0 show" role="alert">
        <div class="d-flex">
          <div class="toast-body">
            <%= messages.error %>
          </div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
      </div>
      <% } %>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center h-100">
    <div class="card p-0 w-75 shadow-lg">

      <div class="row g-0 h-100">
        <!-- Logo Section - Left -->
        <div class="col-md-6 d-flex align-items-center justify-content-center bg-light p-4">
          <a href="/" class="text-center">
            <img src="assets/images/logo.png" height="300" alt="Logo">
          </a>
        </div>

        <!-- Form Section - Right -->
        <div class="col-md-6 p-4 d-flex flex-column justify-content-center">
          <h2 class="fw-bold fs-24">Sign In</h2>
          <p class="text-muted mb-4">Note: Link from ERP</p>
